
public class LojaVirtual {
	public static void main(String args[]) {
		Produto p1 = new Produto();
		Produto p2 = new Produto();
		Produto p3 = new Produto();
		
		p1.codigo = 1;
		p1.nome = "Celular";
		p1.preco = 3500.0;
		p1.departamento = "Eletronicos";
		
		p2.codigo = 2;
		p2.nome = "Microondas";
		p2.preco = 500.0;
		p2.departamento = "Eletrodomesticos";
		
		p3.codigo = 3;
		p3.nome = "Notebook";
		p3.preco = 7000.0;
		p3.departamento = "Eletronicos";
		
		System.out.println("----  PRODUTO  ----");
		p1.imprimir();
		double descP1 = p1.aplicarDesconto(7.0);
		System.out.println("COM DESCONTO: R$ "+descP1);
						
		System.out.println("----  PRODUTO  ----");
		p2.imprimir();
		double descP2 = p2.aplicarDesconto(5.0);
		System.out.println("COM DESCONTO: R$ "+descP2);
		
		System.out.println("----  PRODUTO  ----");
		p3.imprimir();
		double descP3 = p3.aplicarDesconto(10.0);
		System.out.println("COM DESCONTO: R$ "+descP3);
		
	}

}
